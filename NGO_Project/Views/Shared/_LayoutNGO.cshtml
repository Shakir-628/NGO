<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Helping Hands Foundation Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #f7f8fa;
            margin: 0;
            padding: 0;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 24px 32px 0 32px;
        }

        .header-title {
            color: #16a34a;
            font-size: 1.5rem;
            font-weight: 700;
            margin-right: 12px;
            display: inline-block;
        }

        .ngo-portal {
            background: #dcfce7;
            color: #16a34a;
            border: none;
            border-radius: 16px;
            padding: 4px 14px;
            font-size: 0.9rem;
            margin-left: 10px;
            cursor: pointer;
            font-weight: 500;
        }

        .logout-btn {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 8px 18px;
            font-size: 1rem;
            cursor: pointer;
            font-weight: 500;
            margin-left: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 24px 16px;
        }

        .tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 24px;
        }

        .tab {
            background: #f3f4f6;
            border: none;
            border-radius: 8px 8px 0 0;
            padding: 10px 28px;
            font-size: 1.05rem;
            font-weight: 500;
            color: #374151;
            cursor: pointer;
            border-bottom: 2px solid transparent;
            transition: background 0.2s;
            text-decoration: none;
        }

            .tab.active {
                background: #fff;
                color: #1d4ed8;
                border-bottom: 2px solid #2563eb;
                font-weight: 700;
            }

        .dashboard-cards {
            display: flex;
            gap: 18px;
            margin-bottom: 24px;
            flex-wrap: wrap;
        }

        .dashboard-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            padding: 22px 28px 18px 28px;
            flex: 1 1 220px;
            min-width: 220px;
            max-width: 260px;
            display: flex;
            flex-direction: column;
            position: relative;
            border: 1.5px solid #e5e7eb;
        }

            .dashboard-card .card-title {
                color: #374151;
                font-size: 1.05rem;
                font-weight: 600;
                margin-bottom: 8px;
                display: flex;
                align-items: center;
                gap: 6px;
            }

            .dashboard-card .card-value {
                font-size: 2rem;
                font-weight: 700;
                color: #1d4ed8;
                margin-bottom: 2px;
            }

            .dashboard-card .card-sub {
                color: #6b7280;
                font-size: 0.98rem;
            }

            .dashboard-card .card-icon {
                font-size: 1.1rem;
                margin-left: 6px;
                color: #6b7280;
            }

            .dashboard-card.refused {
                border: 1.5px solid #fecaca;
            }

                .dashboard-card.refused .card-title {
                    color: #b91c1c;
                }

                .dashboard-card.refused .card-value {
                    color: #b91c1c;
                }

                .dashboard-card.refused .card-sub {
                    color: #b91c1c;
                }
        /* Frequently Refused Requests */
        .refused-requests-box {
            background: #fef2f2;
            border: 1.5px solid #fecaca;
            border-radius: 12px;
            padding: 22px 28px 18px 28px;
            margin-bottom: 24px;
        }

        .refused-title {
            color: #b91c1c;
            font-size: 1.15rem;
            font-weight: 700;
            margin-bottom: 2px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .refused-desc {
            color: #b91c1c;
            font-size: 1.01rem;
            margin-bottom: 16px;
        }

        .refused-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .refused-item {
            background: #fff;
            border-radius: 8px;
            border: 1.5px solid #e5e7eb;
            padding: 14px 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }

        .refused-item-title {
            font-weight: 600;
            font-size: 1.05rem;
            color: #374151;
        }

        .refused-item-desc {
            color: #6b7280;
            font-size: 0.98rem;
            margin-top: 2px;
        }

        .post-btn {
            background: #22c55e;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 10px 18px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }

            .post-btn:hover {
                background: #16a34a;
            }
        /* Modal Styles */
        .modal-bg {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.18);
            justify-content: center;
            align-items: center;
        }

            .modal-bg.active {
                display: flex;
            }

        .modal-content {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.10);
            padding: 32px 28px 24px 28px;
            min-width: 700px;
            max-width: 900px;
            width: 100%;
            border: 1.5px solid #e5e7eb;
        }

            .modal-content h2 {
                font-size: 1.3rem;
                font-weight: 700;
                margin-bottom: 2px;
                color: #111827;
            }

            .modal-content p {
                color: #6b7280;
                font-size: 1.05rem;
                margin-bottom: 18px;
            }

        .modal-form-row {
            display: flex;
            gap: 18px;
            margin-bottom: 16px;
        }

        .modal-form-group {
            flex: 1 1 0;
            display: flex;
            flex-direction: column;
        }

            .modal-form-group label {
                font-weight: 600;
                font-size: 1rem;
                margin-bottom: 6px;
                color: #111827;
            }

            .modal-form-group input,
            .modal-form-group select {
                padding: 10px 12px;
                border: 1.5px solid #e5e7eb;
                border-radius: 6px;
                font-size: 1rem;
                background: #f9fafb;
                margin-bottom: 0;
            }

                .modal-form-group input:focus,
                .modal-form-group select:focus,
                .modal-form-group textarea:focus {
                    outline: 2px solid #2563eb;
                    border-color: #2563eb;
                    background: #fff;
                }

            .modal-form-group textarea {
                padding: 10px 12px;
                border: 1.5px solid #e5e7eb;
                border-radius: 6px;
                font-size: 1rem;
                background: #f9fafb;
                min-height: 80px;
                resize: vertical;
            }

        .modal-form-actions {
            margin-top: 18px;
            display: flex;
            gap: 12px;
        }

            .modal-form-actions button {
                font-size: 1rem;
                font-weight: 600;
                border-radius: 6px;
                padding: 10px 22px;
                border: none;
                cursor: pointer;
                transition: background 0.2s;
            }

            .modal-form-actions .primary {
                background: #111827;
                color: #fff;
            }

                .modal-form-actions .primary:hover {
                    background: #2563eb;
                }

            .modal-form-actions .secondary {
                background: #fff;
                color: #111827;
                border: 1.5px solid #e5e7eb;
            }

                .modal-form-actions .secondary:hover {
                    background: #f3f4f6;
                }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            tabs.forEach((tab, idx) => {
                tab.addEventListener('click', function () {
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    tabContents.forEach((content, cidx) => {
                        content.style.display = (cidx === idx) ? 'block' : 'none';
                    });
                });
            });
            // Modal logic for Aid Feed
            const openFeedModalBtn = document.getElementById('openFeedModalBtn');
            const feedModalBg = document.getElementById('feedModalBg');
            const cancelFeedModalBtn = document.getElementById('cancelFeedModalBtn');
            if (openFeedModalBtn && feedModalBg && cancelFeedModalBtn) {
                openFeedModalBtn.onclick = function () {
                    feedModalBg.classList.add('active');
                };
                cancelFeedModalBtn.onclick = function (e) {
                    e.preventDefault();
                    feedModalBg.classList.remove('active');
                };
                feedModalBg.onclick = function (e) {
                    if (e.target === feedModalBg) {
                        feedModalBg.classList.remove('active');
                    }
                };
            }
            // Add Item form logic for Inventory tab
            const showAddItemFormBtn = document.getElementById('showAddItemFormBtn');
            const addItemFormContainer = document.getElementById('addItemFormContainer');
            const cancelAddItemFormBtn = document.getElementById('cancelAddItemFormBtn');
            if (showAddItemFormBtn && addItemFormContainer && cancelAddItemFormBtn) {
                showAddItemFormBtn.onclick = function () {
                    addItemFormContainer.style.display = 'block';
                    showAddItemFormBtn.style.display = 'none';
                };
                cancelAddItemFormBtn.onclick = function (e) {
                    e.preventDefault();
                    addItemFormContainer.style.display = 'none';
                    showAddItemFormBtn.style.display = 'inline-flex';
                };
            }
        });
    </script>
</head>
<body>
    <div class="header">
        <div>
            <span class="header-title">Helping Hands Foundation Dashboard</span>
            <button class="ngo-portal">NGO Portal</button>
        </div>
        <button class="logout-btn">Logout</button>
    </div>
    <div class="container">
        <!-- Tabs -->
        <div class="tabs">
            @{
                string currentController = ViewContext.RouteData.Values["controller"].ToString();
                string currentAction = ViewContext.RouteData.Values["action"].ToString();
            }
            <div class="tabs">
                <a class="tab @(currentController == "AidRequests" && currentAction == "Index" ? "active" : "")" href="~/AidRequests/Index">Overview</a>
                <a class="tab @(currentController == "AidRequests" && currentAction == "Index" ? "active" : "")" href="~/AidRequests/Index">Aid Feed</a>
                <a class="tab @(currentController == "InventoryItems" && currentAction == "Index" ? "active" : "")" href="~/InventoryItems/Index">Inventory</a>
                <a class="tab @(currentController == "CashDonations" && currentAction == "Index" ? "active" : "")" href="~/CashDonations/Index">CRM</a>
                <a class="tab @(currentController == "Documents" && currentAction == "Index" ? "active" : "")" href="~/Documents/Index">Documents</a>
            </div>

        </div>

        <div>
            @RenderBody();
        </div>
    </div>

</body>
</html>