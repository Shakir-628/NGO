@model IEnumerable<NGO_Project.CashDonation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Amount</th>
        <th>Currency</th>
        <th>Donation Date</th>
        <th>Notes</th>
        <th>Donor Name</th>
        <th>User First Name</th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Currency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Donor.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CashDonationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CashDonationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CashDonationId })
        </td>
    </tr>
}

</table>
