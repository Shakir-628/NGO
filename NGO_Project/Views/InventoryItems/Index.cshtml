
@model NGO_Project.InventoryItem
@{
    Layout = "~/Views/Shared/_LayoutNGO.cshtml";
}

<div class="p-6 space-y-6 bg-gray-50 min-h-screen">

    <!-- Page Heading -->
    <h1 class="text-3xl font-semibold text-gray-900 mb-2">Inventory tab will show the NGO current inventory status (items)</h1>

    <!-- Header + Add Button -->
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-800">Inventory Management</h2>
        <button id="showAddItemFormBtn" class="flex items-center gap-2 px-5 py-2.5 text-white bg-gray-900 rounded-md hover:bg-gray-800 transition">
            <span class="text-lg">➕</span> Add Item
        </button>
    </div>

    <!-- Stat Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm text-center">
            <p class="text-sm text-gray-500 font-medium">Total Items</p>
            <p class="text-2xl font-bold text-gray-800">2</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm text-center">
            <p class="text-sm text-gray-500 font-medium">Available</p>
            <p class="text-2xl font-bold text-green-600">2</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm text-center">
            <p class="text-sm text-gray-500 font-medium">Low Stock Alert</p>
            <p class="text-2xl font-bold text-yellow-600">0</p>
        </div>
    </div>

    <!-- Add Inventory Form -->
    <div id="addItemFormContainer" class="hidden bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <h3 class="text-xl font-semibold text-gray-800 mb-1">Add New Inventory Item</h3>
        <p class="text-sm text-gray-500 mb-6">Record new donations received</p>

        @using (Html.BeginForm("Create", "InventoryItems", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
                <div>
                    <label class="block text-sm text-gray-700 mb-1">Item Name</label>
                    @Html.TextBoxFor(m => m.ItemName, new { @class = "form-input w-full", placeholder = "Rice bags, Medicine...", required = "required" })
                    @Html.ValidationMessageFor(m => m.ItemName, "", new { @class = "text-red-500 text-xs" })
                </div>
                <div>
                    <label class="block text-sm text-gray-700 mb-1">Category</label>
                    @Html.TextBoxFor(m => m.Category, new { @class = "form-input w-full", placeholder = "Food, Healthcare, Clothing...", required = "required" })
                    @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-red-500 text-xs" })
                </div>
                <div>
                    <label class="block text-sm text-gray-700 mb-1">Quantity</label>
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-input w-full", type = "number", min = "1", placeholder = "50", required = "required" })
                    @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-red-500 text-xs" })
                </div>
                <div>
                    <label class="block text-sm text-gray-700 mb-1">Unit</label>
                    @Html.TextBoxFor(m => m.Unit, new { @class = "form-input w-full", placeholder = "bags, pieces, kits...", required = "required" })
                    @Html.ValidationMessageFor(m => m.Unit, "", new { @class = "text-red-500 text-xs" })
                </div>
                <div>
                    <label class="block text-sm text-gray-700 mb-1">Expiry Date (if applicable)</label>
                    @Html.TextBoxFor(m => m.ExpirationDate, "{0:yyyy-MM-dd}", new { @class = "form-input w-full", @type = "date" })
                </div>
            </div>

            <div class="mt-6 flex gap-4">
                <button type="submit" class="bg-gray-900 text-white px-5 py-2 rounded-md hover:bg-gray-800 transition">Add Item</button>
                <button type="button" id="cancelAddItemFormBtn" class="border border-gray-300 px-5 py-2 rounded-md hover:bg-gray-100 transition">Cancel</button>
            </div>
        }
    </div>

    <!-- Inventory Table -->
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <h3 class="text-xl font-semibold text-gray-800 mb-1">Current Inventory</h3>
        <p class="text-sm text-gray-500 mb-4">Track and manage your donation inventory</p>

        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left border-separate border-spacing-y-2">
                <thead>
                    <tr class="text-gray-600 font-semibold border-b border-gray-200">
                        <th class="p-2">Item Name</th>
                        <th class="p-2">Category</th>
                        <th class="p-2">Quantity</th>
                        <th class="p-2">Unit</th>
                        <th class="p-2">Status</th>
                        <th class="p-2">Received Date</th>
                    </tr>
                </thead>
                <tbody class="text-gray-800">
                    <tr class="bg-gray-50 hover:bg-gray-100 transition">
                        <td class="p-2">Rice Bags (50kg)</td>
                        <td class="p-2">Food</td>
                        <td class="p-2">45</td>
                        <td class="p-2">bags</td>
                        <td class="p-2 text-green-600">✔️ Available</td>
                        <td class="p-2">2025-05-25</td>
                    </tr>
                    <tr class="bg-gray-50 hover:bg-gray-100 transition">
                        <td class="p-2">Medical Supplies Kit</td>
                        <td class="p-2">Healthcare</td>
                        <td class="p-2">12</td>
                        <td class="p-2">kits</td>
                        <td class="p-2 text-green-600">✔️ Available</td>
                        <td class="p-2">2025-05-25</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Optional Script to Show/Hide Add Item Form -->
<script>
    document.getElementById('showAddItemFormBtn').addEventListener('click', () => {
        document.getElementById('addItemFormContainer').classList.remove('hidden');
    });
    document.getElementById('cancelAddItemFormBtn').addEventListener('click', () => {
        document.getElementById('addItemFormContainer').classList.add('hidden');
    });
</script>
