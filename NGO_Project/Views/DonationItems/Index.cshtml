@model IEnumerable<NGO_Project.DonationItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Donation ID</th>
        <th>Quantity</th>
        <th>Unit</th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DonationId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DonationItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DonationItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DonationItemId })
        </td>
    </tr>
}

</table>
