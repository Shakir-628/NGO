@model NGO_Project.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login - Helping Hands</title>
    <link rel="icon" type="image/png" href="~/assets/img/logo/HelpingHands.png" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            margin: 0;
            padding: 40px 20px;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 40px;
            max-width: 600px;
            width: 100%;
        }

        .header-section {
            text-align: center;
        }

        .logo-wrapper img {
            height: 80px;
            margin-bottom: 10px;
        }

        .header-section h1 {
            font-size: 1.8em;
            color: #007bff;
            margin-top: 0;
        }

        .header-section h2 {
            font-size: 1.1em;
            color: #495057;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
        }

        .login-button {
            width: 100%;
            padding: 12px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
        }

            .login-button:hover {
                background-color: #218838;
            }

        .signup-link {
            margin-top: 20px;
            text-align: center;
        }

            .signup-link a {
                color: #007bff;
                text-decoration: none;
            }

                .signup-link a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            font-size: 0.85em;
        }

        .d1 {
            padding: 1px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-section mb-4">
            <div class="logo-wrapper d-flex justify-content-center">
                <img src="~/assets/img/logo/HelpingHands.jpg" alt="Logo" />
            </div>
            <h1 class="text-success fw-bold">Helping Hands</h1>
            <h2>Bridging the gap between community needs and donor contributions</h2>
            <p>Your platform for seamless aid management.</p>
        </div>

        <div id="login-form" class="tab-content active">
            @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { id = "donorForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.Label("User Type")
                    @Html.DropDownList("Type", (SelectList)ViewBag.UserTypelist, "-- Select User Type --", new { @class = "form-control d1" })
                    @Html.ValidationMessage("Type", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter your username" })
                    @Html.ValidationMessage("Username", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    <div class="input-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "donorPassword", placeholder = "Enter your password" })
                        <div class="input-group-append">
                            <span class="input-group-text" id="toggleDonorPassword" style="cursor: pointer;">
                                <i class="fa fa-eye" id="donorEyeIcon"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                    @Html.ValidationMessage("InvalidUser", "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="login-button">Login</button>
            }
        </div>

        <div class="signup-link">
            Don't have an account? <a href="@Url.Action("Registration", "Users")">Register here</a>
        </div>
    </div>

    <script>
        // Toggle password visibility
        document.getElementById("toggleDonorPassword").addEventListener("click", function () {
            const passwordField = document.getElementById("donorPassword");
            const icon = document.getElementById("donorEyeIcon");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        });

        // Intercept form submission for validation
        document.getElementById("donorForm").addEventListener("submit", function (event) {
            const userType = document.getElementById("Type").value;
            const username = document.getElementById("Username").value;
            const password = document.getElementById("donorPassword").value;

            // Check if any fields are empty or the dropdown is at its default value
            if (!userType || !username || !password) {
                event.preventDefault(); // Stop the form from submitting
                swal({
                    title: "Validation Error",
                    text: "Please fill in all the required fields.",
                    icon: "error",
                    button: "OK",
                });
            }
        });
    </script>
</body>
</html>